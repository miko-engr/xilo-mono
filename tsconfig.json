{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@xilo-mono/form-contracts": ["libs/form-contracts/src/index.ts"],
      "@xilo-mono/form-viewer": ["libs/form-viewer/src/index.ts"],
      "@xilo-mono/query-builder": ["libs/query-builder/src/index.ts"],
      "@xilo-mono/integration-contracts": [
        "libs/integration-contracts/src/index.ts"
      ],
      "@xilo-mono/form-helper": ["libs/form-helper/src/index.ts"],
      "@xilo-mono/theme": ["libs/theme/src/index.ts"],
      "@xilo-mono/pdf-mapper": ["libs/pdf-mapper/src/index.ts"],
      "@xilo-mono/block-dialog": ["libs/block-dialog/index.ts"],
      "@xilo-mono/form-tree": ["libs/form-tree/src/index.ts"]
    },
    "esModuleInterop": true
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": false,
    "preserveWhitespaces": true
  },
  "exclude": ["node_modules", "tmp"]
}
